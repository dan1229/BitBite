<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/product_sans</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="cardBackgroundColor">@color/card_light</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- enable window content transitions -->
        <!--<item name="android:windowActivityTransitions">true</item>-->

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/fade_in</item>
        <item name="android:windowExitTransition">@transition/fade_out</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>

    </style>


    <!-- Splash/Launch Screen Theme -->
    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowAnimationStyle">@style/Animation.LauncherAnimation</item>
    </style>

    <style name="Animation" />
    <style name="Animation.LauncherAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@animator/enter_from_right</item>
        <item name="android:windowEnterTransition">@animator/enter_from_right</item>
    </style>


    <style name="AppTheme.ExplodeTransition">
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButtonOutline" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape_outline</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="IconLayout">
        <item name="android:paddingTop">@dimen/icon_margin</item>
        <item name="android:paddingBottom">@dimen/icon_margin</item>
    </style>

    <style name="IconLayout.Clickable">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.CircleButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="MainLayoutStyle">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:layout_marginLeft">@dimen/DEFAULT_MARGIN</item>
        <item name="android:layout_marginRight">@dimen/DEFAULT_MARGIN</item>
        <item name="android:layout_marginTop">?android:attr/actionBarSize</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="GreyLine">
        <item name="android:layout_marginBottom">@dimen/gray_bar_margin</item>
        <item name="android:layout_marginTop">@dimen/gray_bar_margin</item>
        <item name="android:background">@color/grey_line</item>
    </style>

    <style name="TextDot">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:text">@string/dot</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:background">@color/colorToolbarLight</item>-->
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <!--<item name="android:background">@color/colorToolbarLight</item>-->
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
    </style>

</resources>
