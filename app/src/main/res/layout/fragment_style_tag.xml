<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    tools:context=".StyleTag">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/styletag_tag"
        style="@style/AppTheme.CircleButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:elevation="0dp" >

        <ImageView
            android:id="@+id/styletag_icon_close"
            style="@style/AppTheme.CircleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/close_icon" />

        <TextView
            android:id="@+id/styletag_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/style_display_text"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/styletag_icon_close"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


</FrameLayout>