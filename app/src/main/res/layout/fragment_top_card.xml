<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topcard_card"
    android:transitionName="top_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:translationZ="8dp"
    card_view:cardBackgroundColor="@color/card_light">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/topcard_layout"
        android:transitionName="top_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".TopCard" >
        <ImageView
            android:id="@+id/topcard_image"
            android:contentDescription="@string/imageview_description_place_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/topcard_image_height"
            android:maxHeight="@dimen/topcard_image_height"
            android:layout_marginBottom="@dimen/topcard_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            card_view:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/topcard_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/default_place_image" />
        <TextView
            android:id="@+id/topcard_name"
            android:textSize="@dimen/text_x_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/topcard_margin"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/topcard_image"
            app:layout_constraintBottom_toTopOf="@id/topcard_rating"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/place_default_name"/>
        <ImageView
            android:id="@+id/topcard_rating"
            android:layout_width="@dimen/topcard_review_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/topcard_margin"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/topcard_name"
            app:layout_constraintBottom_toTopOf="@id/topcard_layout_opennow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/default_star" />
        <LinearLayout
            android:id="@+id/topcard_layout_opennow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/topcard_margin"
            app:layout_constraintTop_toBottomOf="@id/topcard_rating"
            app:layout_constraintBottom_toTopOf="@id/moreinfo_layout_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/topcard_margin"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_secondary"
                android:text="@string/open_title"/>
            <TextView
                android:id="@+id/topcard_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_normal"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/default_open" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/moreinfo_layout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/topcard_layout_opennow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/topcard_description"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/default_description" />
            <TextView
                style="@style/TextDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/topcard_price"
                android:transitionName="place_price"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/place_default_price" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:background="@color/grey_line" />
</android.support.v7.widget.CardView>
