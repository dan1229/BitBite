<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".ReviewActivity"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/reviewCard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_card_margin"
        card_view:cardCornerRadius="@dimen/card_radius"
        card_view:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/big_card_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reviewReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:gravity="start"
                android:text="@string/default_review"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/reviewAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:singleLine="true"
                android:text="@string/default_review_author"
                android:textSize="32sp" />

            <ImageView
                android:id="@+id/reviewRating"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="end"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/default_star" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/reviewPrev"
            style="@style/AppTheme.CircleButton"
            android:layout_width="@dimen/circle_button_diameter"
            android:layout_height="@dimen/circle_button_diameter"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"
            android:scaleX="-1"
            app:srcCompat="@drawable/arrow" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/reviewNext"
            style="@style/AppTheme.CircleButton"
            android:layout_width="@dimen/circle_button_diameter"
            android:layout_height="@dimen/circle_button_diameter"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/arrow" />
    </LinearLayout>
</LinearLayout>
